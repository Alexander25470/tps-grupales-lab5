<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/BDHibernate?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        
        <mapping class="ejercicio1.entidad.Persona"/>
        <mapping class="ejercicio1.entidad.TarjetaSube"/>
        <mapping class="ejercicio2.entidad.Cliente"/>
        <mapping class="ejercicio2.entidad.Compra"/>
        <mapping class="ejercicio3.entidad.Artista"/>
        <mapping class="ejercicio3.entidad.Evento"/>
        <mapping class="ejercicio4.entidad.Mercado"/>
        <mapping class="ejercicio4.entidad.Producto"/>
    </session-factory>
</hibernate-configuration>
